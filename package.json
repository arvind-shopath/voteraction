{
  "name": "voteraction",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build:out": "next build && next export",
    "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "npm run build && electron-builder",
    "cap:sync": "npm run build && npx cap sync"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@prisma/client": "^5.11.0",
    "bcryptjs": "^3.0.3",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "pdf-lib": "^1.17.1",
    "prisma": "^5.11.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "electron-is-dev": "^3.0.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.creatiav.voteraction",
    "productName": "Voteraction",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}